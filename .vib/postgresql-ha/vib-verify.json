{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/bitnami/postgresql-ha"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/bitnami/postgresql-ha"
        },
        "target_platform": {
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}",
          "size": {
            "name": "M4"
          }
        }
      },
      "actions": [
        {
          "action_id": "goss",
          "params": {
            "resources": {
              "path": "/.vib"
            },
            "tests_file": "postgresql-ha/goss/repmgr/goss.yaml",
            "vars_file": "postgresql-ha/runtime-parameters.yaml",
            "remote": {
              "pod": {
                "workload": "sts-postgresql-ha-postgresql"
              }
            }
          }
        },
        {
          "action_id": "goss",
          "params": {
            "resources": {
              "path": "/.vib"
            },
            "tests_file": "postgresql-ha/goss/pgpool/goss.yaml",
            "vars_file": "postgresql-ha/runtime-parameters.yaml",
            "remote": {
              "pod": {
                "workload": "deploy-postgresql-ha-pgpool"
              }
            }
          }
        },
        {
          "action_id": "ginkgo",
          "params": {
            "resources": {
              "path": "/.vib/postgresql-ha/ginkgo"
            },
            "params": {
              "kubeconfig": "{{kubeconfig}}",
              "namespace": "{{namespace}}",
              "name": "postgresql-ha",
              "username": "postgres",
              "password": "psqlPassword123!4"
            }
          }
        }
      ]
    }
  }
}
